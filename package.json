{
  "name": "herotoken-contracts-solidity",
  "version": "0.1.0",
  "description": "Herotoken solidity contracts",
  "private": false,
  "scripts": {
    "ganache": "ganache-cli",
    "compile": "truffle compile",
    "migration": "truffle migration --network development",
    "migration:kovan": "truffle migration --network kovan",
    "migration:kovan:reset": "truffle migration --reset --network kovan",
    "migration:reset": "truffle migration --reset --network development",
    "console": "truffle console --network kovan",
    "test": "NODE_ENV=test truffle test",
    "coverage": "./node_modules/.bin/solidity-coverage",
    "solhint": "./node_modules/.bin/solhint -f table contracts/**/*.sol",
    "prettier:solidity": "./node_modules/.bin/prettier --write contracts/**/*.sol"
  },
  "husky": {
    "hooks": {
      "pre-commit": "scripts/test.sh"
    }
  },
  "author": "Hero Fintech",
  "license": "AGPL-v3",
  "dependencies": {
    "axios": "^0.18.0",
    "bignumber.js": "^9.0.0",
    "bluebird": "^3.5.5",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "concurrently": "^4.1.0",
    "dotenv": "^6.2.0",
    "faker": "^4.1.0",
    "ganache-cli": "^6.4.4",
    "husky": "^2.7.0",
    "openzeppelin-solidity": "^2.3.0",
    "truffle": "^5.0.26",
    "truffle-assertions": "^0.9.1",
    "truffle-hdwallet-provider": "^1.0.13",
    "web3-utils": "^1.0.0-beta.55"
  },
  "devDependencies": {
    "prettier": "^1.18.2",
    "prettier-plugin-solidity": "^1.0.0-alpha.27",
    "solhint": "^2.1.0",
    "solhint-plugin-prettier": "0.0.3",
    "solidity-coverage": "^0.5.11"
  }
}
